<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:ads="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.englishforkids.fatmanur.englishforkids.AnaSayfa">
    <ScrollView
        android:id="@+id/layoutMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <ImageButton
                android:id="@+id/imgBtnColor"
                android:layout_width="385dp"
                android:layout_height="196dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"

                android:background="#FFFFFF"
                app:srcCompat="@drawable/colors"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="310dp"
                android:layout_weight="0.03" />

            <TextView
                android:id="@+id/txtVColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="29dp"
                android:layout_toStartOf="@+id/imageButton5"
                android:gravity="center"
                android:text="COLORS"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="185dp" />


            <ImageButton
                android:id="@+id/imgBtnFruits"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/fruits"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="312dp" />

            <TextView
                android:id="@+id/txtVFruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="FRUITS"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="240dp" />

            <ImageButton
                android:id="@+id/imgBtnPets"
                android:layout_width="235dp"
                android:layout_height="234dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/petss"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="230dp" />


            <TextView
                android:id="@+id/txtVPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ANIMALS"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="360dp" />

            <ImageButton
                android:id="@+id/imgBtnShapes"
                android:layout_width="235dp"
                android:layout_height="234dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/shapes"
                tools:layout_editor_absoluteX="330dp"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/txtVShapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SHAPES"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="360dp" />

            <ImageButton
                android:id="@+id/imgBtnNumbers"
                android:layout_width="235dp"
                android:layout_height="234dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/numbers"
                tools:layout_editor_absoluteX="330dp"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/txtVNumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NUMBERS"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="360dp" />



            <ImageButton
                android:id="@+id/imgBtnVegetables"
                android:layout_width="235dp"
                android:layout_height="234dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/vegetables"
                tools:layout_editor_absoluteX="330dp"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/txtVVegetables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="VEGETABLES"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="360dp" />



            <ImageButton
                android:id="@+id/imgBtnVehicles"
                android:layout_width="235dp"
                android:layout_height="234dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/vehicle"
                tools:layout_editor_absoluteX="330dp"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/txtVVehicles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="VEHICLES"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="360dp" />


            <ImageButton
                android:id="@+id/imgBtnVideos"
                android:layout_width="235dp"
                android:layout_height="234dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/song"
                tools:layout_editor_absoluteX="315"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/txtSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SONGS"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="360dp" />

            <ImageButton
                android:id="@+id/imgBtnTrueFalseGame"
                android:layout_width="235dp"
                android:layout_height="234dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/truefalse"
                tools:layout_editor_absoluteX="315"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/txtTrueFalseGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TRUE FALSE GAME"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="360dp" />





            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

        </TableLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>